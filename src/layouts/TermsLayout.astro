---
import Layout from '~/layouts/Layout.astro';
import TermsCriticalStyles from '~/components/common/TermsCriticalStyles.astro';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  frontmatter?: any;
}

const { metadata = {}, frontmatter } = Astro.props;

// Fusionner les métadonnées du frontmatter avec celles passées en props
const mergedMetadata = {
  ...metadata,
  title: frontmatter?.title || metadata.title,
};
---

<Layout metadata={mergedMetadata} isTermsPage={true}>
  <!-- Inclure les styles critiques spécifiques à la page Terms -->
  <TermsCriticalStyles />
  
  <div class="container mx-auto px-4 py-8 md:py-16">
    <article class="prose prose-lg max-w-3xl mx-auto">
      <slot />
    </article>
  </div>
</Layout>