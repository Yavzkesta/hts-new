---
import '~/assets/styles/tailwind.css';

import { ViewTransitions } from 'astro:transitions';
import CustomStyles from '~/components/CustomStyles.astro';
import Favicons from '~/components/Favicons.astro';
import Analytics from '~/components/common/Analytics.astro';
import CommonMeta from '~/components/common/CommonMeta.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import CriticalStyles from '~/components/common/CriticalStyles.astro';
import TermsStyles from '~/components/common/TermsStyles.astro';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  isTermsPage?: boolean; // Nouveau prop pour indiquer si c'est la page terms
}

const { metadata = {}, isTermsPage = false } = Astro.props;

// Déterminer si nous sommes sur la page terms (si pas déjà spécifié par les props)
const isOnTermsPage = isTermsPage || Astro.url.pathname.includes('/terms');
---

<!DOCTYPE html>
<html lang="fr" class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Metadata {...metadata} />
    <Favicons />
    
    <!-- Injecter les styles critiques en premier -->
    <CriticalStyles />
    <CustomStyles />
    
    <!-- Ne pas inclure TermsCriticalStyles ici, il sera inclus par TermsLayout.astro -->
    
    <SiteVerification />
    <Analytics />
    <ViewTransitions />
    
    <!-- Optimiser le chargement des CSS -->
    <TermsStyles />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <ApplyColorMode />
    <slot />
    <BasicScripts />
  </body>
</html>